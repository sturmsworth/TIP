<section class="subsequent" id="blog">
    <div class="container">
        <div class="row text-center">
            <div class="col">
                <h1 class="haunted">Blog</h1>
            </div>
        </div>
        <% posts.slice(-5).reverse().forEach((post) => { %>
            <div class="container" id=<%=post._id %>>
                <div class="row text-center">
                    <div class="col-sm-12 post-img">
                        <img src=<%=post.img %> alt=
                        <%= 'post-img-' + post._id %>>
                    </div>
                </div>
                <div class="row text-center">
                    <div class="col-sm-12 post-title">
                        <div class="col-sm-12">
                            <h3>
                                <%= post.title %>
                            </h3>
                        </div>
                    </div>
                </div>
                <div class="row text-center">
                    <div class="col-sm-12 post-content">
                        <p>
                            <%= post.content.substring(0, 500) + "..." %>
                        </p>
                    </div>
                </div>
                <div class="row text-center">
                    <div class="col-sm-12 read-more">
                        <a href="/post/<%=post._id%>">
                            <button class="btn btn-lg btn-outline-dark">Read More</button>
                        </a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</section>
<%- include('footer') -%>